<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.SolarTech" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Verde principal -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!-- Verde escuro -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Texto branco sobre verde -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item> <!-- Verde claro -->
        <item name="colorSecondaryVariant">@color/colorButton</item> <!-- Botões -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- Texto branco sobre botões -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Verde escuro -->
        <item name="android:navigationBarColor">@color/colorPrimary</item> <!-- Barra de navegação -->

        <!-- Background and text colors -->
        <item name="colorBackground">@color/colorBackground</item> <!-- Fundo -->
        <item name="android:windowBackground">@color/colorBackground</item> <!-- Fundo de janela -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item> <!-- Texto principal -->
        <item name="android:textColorSecondary">@color/colorTextSecondary</item> <!-- Texto secundário -->

        <!-- Customize your theme here -->
    </style>
</resources>
